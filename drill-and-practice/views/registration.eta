<h1>Register!</h1>

<%~ includeFile("./partials/errorsPartial.eta", {errors: it.errors}) %>


<form method="POST" action="/auth/register">
  Email:<br/>
  <input type="email" name="email" value="<%= it.email ? it.email: "" %>" /><br/>
  Password:<br/>
  <input type="password" name="password" /><br/>
  Same password again:<br/>
  <input type="password" name="verification" /><br/>
  <input type="submit" value="Register" />
</form>

<p>Already registered? <a href="/auth/login">Login here!</a></p>